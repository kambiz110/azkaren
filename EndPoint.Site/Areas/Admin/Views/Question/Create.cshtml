@model Azmoon.Application.Service.Question.Dto.AddQuestionViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>ایجاد سوال</h1>


<div class="row">
    <div class="col-md-6 col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" ></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <input asp-for="QuizId" value="@ViewBag.QuizId" type="hidden" />

            <div class="form-group row">
                <input type="submit" value="ذخیره" class="btn btn-primary ml-2" />
                <a asp-action="Index" class="btn btn-outline-info">بازگشت به لیست</a>
            </div>
        </form>
    </div>
</div>

