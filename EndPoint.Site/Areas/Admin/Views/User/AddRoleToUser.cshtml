@model Azmoon.Application.Service.User.Dto.AddRoleToUserDto
@using Microsoft.AspNetCore.Mvc.Rendering


<h1>افزودن نقش به کاربر</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoleToUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="Id" class="form-control" />

            </div>

            <div class="col-sm-12 col-md-8 h3">
                <label asp-for="FullName" class="ml-1"></label>
                <span class="text-danger p-1">
                    :
                    @Html.DisplayFor(model => model.FullName)
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>

                <select asp-for="Role" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["Roles"]">
                    <option>لطفا انتخاب نمائید</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="row">
                <input type="submit" value="ثبت" class="btn btn-primary" />
                <a asp-action="UserRoles" asp-route-id="@Model.Id" class="btn btn-danger mr-2">بازگشت</a>
            </div>
        </form>
    </div>
</div>


